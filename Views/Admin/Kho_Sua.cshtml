        @model QuanLyBanGiay.Models.Kho

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Form sửa Kho -->
<form method="post" asp-action="Kho_Sua_Handle" asp-controller="Admin">
    <div class="form-group">
        <label asp-for="iMaNCC">Mã NCC</label>
        <input asp-for="iMaNCC" name="iMaNCC" value="@ViewBag.MaNCC" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="iMaGiay">Mã Giày</label>
        <input asp-for="iMaGiay" value="@ViewBag.MaGiay" name="iMaGiay"  readonly class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="iSize">Size</label>
        <input asp-for="iSize" name="iSize" value="@ViewBag.Size" class="form-control" />
        <span asp-validation-for="iSize" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="iSoLuongKho">Số Lượng Kho</label>
        <input asp-for="iSoLuongKho" name="iSoLuongKho" value="@ViewBag.SoLuong" class="form-control" />
        <span asp-validation-for="iSoLuongKho" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="iGiaNhap">Giá Nhập</label>
        <input asp-for="iGiaNhap" name="iGiaNhap" value="@ViewBag.GiaNhap" class="form-control" />
        <span asp-validation-for="iGiaNhap" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
