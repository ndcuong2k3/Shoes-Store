@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 style="text-align:center">Chỉnh sửa thông tin nhân viên</h2>
<form method="post" asp-action="NhanVien_Sua_Handle" asp-controller="Admin">
    <div class="form-group">
        <label for="MaNhanVien">Mã nhân viên</label>
        <input type="text" class="form-control" id="MaNhanVien" name="MaNhanVien" value="@ViewBag.MaNhanVien" readonly />
    </div>
    <div class="form-group">
        <label for="TenNV">Tên nhân viên</label>
        <input type="text" class="form-control" id="TenNV" name="TenNV" value="@ViewBag.TenNV" />
    </div>
    <div class="form-group">
        <label for="NgaySinh">Ngày Sinh</label>
        <input type="date" class="form-control" id="NgaySinh" name="NgaySinh" value="@ViewBag.NgaySinh" />
    </div>
    <div class="form-group">
        <label for="QueQuan">Quê Quán</label>
        <input type="text" class="form-control" id="QueQuan" name="QueQuan" value="@ViewBag.QueQuan" />
    </div>
    <div class="form-group">
        <label for="GioiTinh">Gioi Tinh</label>
        <input type="text" class="form-control" id="GioiTinh" name="GioiTInh" value="@ViewBag.GioiTinh" />
    </div>
    <div class="form-group">
        <label for="MaBP">Mã Bộ Phận</label>
        <input type="text" class="form-control" id="MaBP" name="MaBP" value="@ViewBag.MaBP" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>
